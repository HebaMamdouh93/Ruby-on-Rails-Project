
<p id="notice"><%= notice %></p>
<%= flash[:alert] %>
<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.user.name %></td>
        <td><%= link_to 'Show', course %>
        <% if ( can? :update, Course ) && ( current_user.id == course.user.id ) %>
      
        <%= link_to 'Add new Lecture', new_lecture_path(user_id: course.user.id ,course_id: course.id)  %>
        <%= link_to 'Edit', edit_course_path(course) %>
        <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
        
       
        
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if ( can? :update, Course )  %>
<%= link_to 'New Course', new_course_path %>
<% end %>